@inject IBookRepository Repository
@inject NavigationManager Navigation

<div class="book-card">
    <div class="book-card-header">
        <h4 class="title-book">@Book.Title</h4>
    </div>
    <div class="book-card-body">
        <div class="book-info">
            <span class="author">Creado por: @Book.Author</span>
            <span class="date">-  @Book.PublicationDate.ToString("MMMM dd, yyyy")</span>
        </div>
        <h6 class="title-category">@Book.Category</h6>
    </div>
    <div class="book-card-footer">
        <a href="@($"/edit/{Book.Id}")" class="btn btn-edit">
            Editar
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16" style="margin-top:-5px;">
                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
            </svg>
        </a>
        <button @onclick="OpenConfirmDialog" class="btn btn-delete">
            Eliminar <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16" style="margin-top:-5px;">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
            </svg>
        </button>
    </div>
</div>
<ConfirmDialog Show="showConfirmDialog" OnCancel="CancelDelete" OnOk="DeleteBook">
<h3>
    Quieres eliminar el libro @Book.Title ?
</h3></ConfirmDialog>

@code {
    private bool showConfirmDialog;

    [Parameter]
    public required Book Book { get; set; }

    private void OpenConfirmDialog()
    {
        showConfirmDialog = true;
    }

    private void CancelDelete()
    {
        showConfirmDialog = false;
    }
    [Parameter]
    public EventCallback<int> OnBookDeleted { get; set; }

    private async Task DeleteBook()
    {
        await Repository.DeleteByIdAsync(Book.Id);
        showConfirmDialog = false;
        await OnBookDeleted.InvokeAsync(Book.Id);
    }

}
